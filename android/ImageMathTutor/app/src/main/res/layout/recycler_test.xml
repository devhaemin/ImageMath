<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_showsubmit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_test_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:text="3차 모의고사"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/icon_status"
            app:layout_constraintLeft_toRightOf="@id/icon_status"
            app:layout_constraintTop_toTopOf="@id/icon_status" />

        <TextView
            android:id="@+id/text_test_submit_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:text="18 / 21"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dummy_text_test_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="평균 :"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/text_test_name"
            app:layout_constraintTop_toBottomOf="@id/text_test_name" />

        <TextView
            android:id="@+id/text_test_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="30dp"
            android:text="정보없음"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/dummy_text_test_average"
            app:layout_constraintTop_toBottomOf="@id/text_test_name" />

        <TextView
            android:id="@+id/dummy_text_lecture_student_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="총인원 :"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/text_test_name"
            app:layout_constraintTop_toBottomOf="@id/dummy_text_test_average" />

        <TextView
            android:id="@+id/text_lecture_student_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24명"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/text_test_average"
            app:layout_constraintTop_toTopOf="@id/dummy_text_lecture_student_num" />

        <TextView
            android:id="@+id/dummy_text_submit_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="추가제출 :"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/text_test_name"
            app:layout_constraintTop_toBottomOf="@id/dummy_text_lecture_student_num" />

        <TextView
            android:id="@+id/text_submit_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보없음"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/text_lecture_student_num"
            app:layout_constraintTop_toTopOf="@id/dummy_text_submit_more" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>